@model LB3.Models.Article

<form asp-action="Edit" method="post" enctype="multipart/form-data">
      <div class="row p-2">
        <div class="col p-2">
              <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
            </div>
             <div class="form-group">
                <label asp-for="Text"></label>
                <textarea asp-for="Text" class="form-control"></textarea>
            </div>
            <div>
                <label asp-for="Image">Image</label>
                <input name="Image" type="file" class="form-control" />
            </div>
            @if (Model.Image != null)
            {
                    <img class="card-img-top" style="border-radius:20px"
                         src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" />
            }
            <div class="create">
                 <input type="submit" class="btn btn-outline-secondary" value="Update"/>
            </div>
        </div>

      </div>
</form>

<style>
    .row .create input{
        width:100%;
        margin-top:20px 
    }
</style>
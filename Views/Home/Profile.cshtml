@model LB3.Models.User


 <div class="container mt-5">
    <div class="row row-cols-1 row-cols-md-2 mb-2 text-center">
      <div class="col">
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <img class="card-img-top" src="../example_img/ProfilePhoto.png" alt="Card image cap">
            <div class="card-body">
              <h3 class="card-title text-center">@Model.UserName</h3>
            </div>
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card mb-4 shadow-sm">
          <div class="card-body">
            <div class="card-body">
              <h3 class="card-title text-center">My profile information</h3>
            </div>
            <div class="card-body">
              <table class="table">
                <tbody>
                  <tr>
                    <th scope="row"></th>
                    <td>E-mail</td>
                    <td>@Model.Email</td>
                  </tr>
                    <tr>
                    <th scope="row"></th>
                    <td>Name</td>
                    <td>@Model.UserName</td>
                  </tr>
                  <tr>
                    <th scope="row"></th>
                    <td>Date of birth</td>
                    <td>@Model.DateOfBirth.ToShortDateString()</td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

    </div>

  </div>
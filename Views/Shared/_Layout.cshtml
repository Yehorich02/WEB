<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LB3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
     <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;700;900&display=swap" rel="stylesheet">
      <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
        integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
     <header
        class="d-flex flex-column flex-md-row justify-content-around align-items-center p-3 px-md-4 mb-3 bg-light border-bottom shadow-sm">
        <h4 class="h3 my-2 me-md-auto fw-normal">Foodie blog</h4>
        <nav class="my-4 my-md-0 me-md-2 ">
            <a class="btn btn-outline-link text-success"  asp-action="Index">Home</a>
            <a class="btn btn-outline-link text-muted"  asp-action="Articles">Articles</a>
            <a class="btn btn-outline-link text-muted" asp-action="Discussion" disabled>Discussion</a>
            @if (User.Identity.IsAuthenticated)
            {
                  <a class="btn btn-outline-link" asp-action="Admin">Admin</a>
                <a class="btn btn-outline-link" asp-action="Profile">Profile</a>
            }
        </nav>
        <nav class="my-4 my-md-0 me-md-3">
            @if (!User.Identity.IsAuthenticated)
            {
                <a class="btn btn-outline-link" asp-action="SignIn">Sign in</a>
                <a class="btn btn-outline-secondary" asp-action="SignUp">Sign up</a>
            }
            else
            {
                 <form method="post" asp-action="Logout">
                    <input type="submit" class="btn btn-outline-secondary" value="Logout"/>
                </form>
            }
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - LB3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
